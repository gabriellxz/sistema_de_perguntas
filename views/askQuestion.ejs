<%- include('partials/header.ejs') %>
<body>

    <%- include('partials/navbar.ejs') %>
    
    <div class="container">

        <div class="card" id="form-ask">
            <div class="card-header">
                <h3>Perguntar</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/saveAsk" class="form-container">
                    <div>
                        <label>Título</label>
                        <input type="text" name="title" placeholder="Faça sua pergunta" class="form-control" />
                    </div>
                    <br>
                    <div>
                        <label>Descrição</label>
                        <textarea placeholder="Descreva sua pergunta" name="description" class="form-control"></textarea>
                    </div>
                    <br>
                    <button class="btn btn-success">Salvar pergunta</button>
                </form>
            </div>
        </div>

    </div>
</body>
