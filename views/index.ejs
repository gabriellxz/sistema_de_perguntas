<%- include('partials/header.ejs') %>

    <body>
        <%- include('partials/navbar.ejs') %>
            <div class="container">

                <hr>
                <h1>Perguntas</h1>
                <hr>

                <a href="/fazerPergunta" class="btn btn-success">Fazer pergunta</a>

                <% questions.map(q=> { %>
                       
                    <div class="card mt-3">
                        <div class="card-body">
                            <h3>
                                <%= q.title %>
                            </h3>
                        </div>
                        <div class="card-footer">
                            <a href="/pergunta/<%= q.id %>" class="btn btn-success">Responder</a>
                        </div>
                    </div>

                <% }) %>
            </div>
    </body>
    <%- include('partials/footer.ejs') %>